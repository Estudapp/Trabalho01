CREATE TABLE Ranking (
    Soma_de_Pontos,
    Colocacao_no_Ranking,
    PRIMARY KEY (Soma_de_Pontos, Colocacao_no_Ranking)
);

CREATE TABLE Desempenho (
    Pontos_por_respostas,
    Pontos_por_exercicios_feitos,
    PRIMARY KEY (Pontos_por_respostas, Pontos_por_exercicios_feitos)
);

CREATE TABLE Diciplina (
    Nivel_de_Dificuldade,
    Horas_a_dedicar,
    Conteudo,
    Exercicios,
    Nome,
    PRIMARY KEY (Nivel_de_Dificuldade, Horas_a_dedicar, Nome)
);

CREATE TABLE Usuario (
    Nome,
    E_mail,
    Nick,
    Senha,
    Contato,
    Data_de_Nascimento,
    Sexo,
    Nivel_de_Escolaridade,
    PRIMARY KEY (E_mail, Nick, Senha, Contato)
);

CREATE TABLE Login (
    Nick,
    Senha,
    PRIMARY KEY (Nick, Senha)
);

CREATE TABLE Conta_Usuario_Login_Diciplina (
    FK_Usuario_E_mail,
    FK_Usuario_Nick,
    FK_Usuario_Senha,
    FK_Usuario_Contato,
    FK_Login_Nick,
    FK_Login_Senha,
    FK_Diciplina_Nivel_de_Dificuldade,
    FK_Diciplina_Horas_a_dedicar,
    FK_Diciplina_Nome
);

CREATE TABLE Aproveitamento (
    FK_Diciplina_Nivel_de_Dificuldade,
    FK_Diciplina_Horas_a_dedicar,
    FK_Diciplina_Nome,
    FK_Desempenho_Pontos_por_respostas,
    FK_Desempenho_Pontos_por_exercicios_feitos
);

CREATE TABLE Pontos (
    FK_Ranking_Soma_de_Pontos,
    FK_Ranking_Colocacao_no_Ranking,
    FK_Desempenho_Pontos_por_respostas,
    FK_Desempenho_Pontos_por_exercicios_feitos
);
 
